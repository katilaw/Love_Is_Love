<div class="inline">
  <%= form_for [@story, @comment] do |f| %>

  <%= f.label :body, class:'form-text' %>
  <%= f.text_field :body %>

  <%= f.hidden_field :creator_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit 'Add Comment', class: 'button'%>
  </div>
  <% end %>
</div>
