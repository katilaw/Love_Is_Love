<div class="panel devise-signup small-12 small-centered medium-8 columns">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Last Name', required: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, autocomplete: "off" %>
    <%= f.input :password_confirmation, label: 'Password Confirmation', required: true, autocomplete: "off" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign Up", class: "button" %>
  </div>
  <% end %>
</div>
